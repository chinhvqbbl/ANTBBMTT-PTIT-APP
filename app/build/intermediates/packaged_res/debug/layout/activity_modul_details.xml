<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_modul_details_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintBottom_toTopOf="@id/relay_ads"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".ui.component.moduldetails.ModulDetailsActivity">

            <RelativeLayout
                android:id="@+id/layout_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/tv_name_module"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/fira_sans_medium"
                    android:text="@string/txt_ringing_state"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_tool_bar">

                <Switch
                    android:id="@+id/switch_display_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_turn_on"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_display_and_control_listening_music_on_your_notch"
                    android:textColor="@color/color_777777" />


                <Switch
                    android:id="@+id/switch_rotate_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_rotate_cover"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/layout_tool_bar">

                <Switch
                    android:id="@+id/switch_display_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_turn_on"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_display_app_notifications_amp_make_actions_by_your_notch"
                    android:textColor="@color/color_777777" />


                <RelativeLayout
                    android:id="@+id/btn_app_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/txt_app"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next_right" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/btn_icon_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/txt_icon"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/imv_icon_next"
                        android:text="App icon" />

                    <ImageView
                        android:id="@+id/imv_icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_next_right" />

                </RelativeLayout>

                <Switch
                    android:id="@+id/switch_quick_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_quick_display"
                    android:textColor="@color/black"

                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <Switch
                    android:id="@+id/switch_hide_on_lock_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_show_on_lock_screen"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />


                <Switch

                    android:id="@+id/switch_show_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_show_action"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <RelativeLayout
                    android:id="@+id/btn_notification_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/txt_icon"
                        android:textColor="@color/black" />


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imv_icon_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/black"
                        android:src="@drawable/ic_next_right"
                        app:shapeAppearanceOverlay="@style/roundConner" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_tool_bar">

                <Switch
                    android:id="@+id/switch_display_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_incoming_call"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_show_incoming_calls_directly_on_your_notch"
                    android:textColor="@color/color_777777"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />


                <Switch
                    android:id="@+id/switch_display_call_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_call_timer"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_display_a_timer_when_in_call"
                    android:textColor="@color/color_777777"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_tool_bar">

                <Switch
                    android:id="@+id/switch_display_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_turn_on"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_display_navigation_directions_in_your_notch_when_using_google_map_navigation"
                    android:textColor="@color/color_777777"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_haedset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_tool_bar">

                <Switch
                    android:id="@+id/switch_display_haedset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_turn_on"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_headset_connect_animation"
                    android:textColor="@color/color_777777"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_battery_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_tool_bar">

                <Switch
                    android:id="@+id/switch_display_battery_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_turn_on"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_display_a_battery_charging_animation_when_plugged"
                    android:textColor="@color/color_777777"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ringing_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layout_tool_bar">

                <Switch
                    android:id="@+id/switch_display_ringing_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/txt_turn_on"
                    android:textColor="@color/black"
                    android:thumb="@drawable/thumb_selector"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_dynamic_island"
                    app:track="@drawable/track_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:text="@string/txt_display_ringing_mode_change_on_your_notch"
                    android:textColor="@color/color_777777"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/relay_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:id="@+id/fr_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" android:tag="binding_1">

                <include
                    android:id="@+id/shimmerAds"
                    layout="@layout/ads_shimmer_native_large" />
            </FrameLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

         