<?xml version="1.0" encoding="UTF-8"?>

                                                       
                                                   

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_permission_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:paddingHorizontal="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/relay_ads"
            app:layout_constraintTop_toBottomOf="@+id/img_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_number_1"
                    app:layout_constraintBottom_toBottomOf="@id/tv_accessibility_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_accessibility" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_accessibility"
                    style="@style/TextViewSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/accessibility"
                    app:layout_constraintStart_toEndOf="@id/img_number"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_accessibility_details"
                    style="@style/TextViewMediumActive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/used_to_display_the_notch_over_other_apps"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_number"
                    app:layout_constraintTop_toBottomOf="@id/tv_accessibility" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/switch_accessibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:padding="@dimen/_8sdp"
                    android:theme="@style/SCBSwitch"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_accessibility_details" >


                    <TextView
                        android:textColor="@color/color_777777"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/accessibility"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imv_check_accessibility"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_un_select_app"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_number_2"
                    app:layout_constraintBottom_toBottomOf="@id/tv_notification_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_notification" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_notification"
                    style="@style/TextViewSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/notification_access"
                    app:layout_constraintStart_toEndOf="@id/img_number2"
                    app:layout_constraintTop_toBottomOf="@id/switch_accessibility" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_notification_details"
                    style="@style/TextViewMediumActive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/used_to_forward_listening_music_and_notifications_to_the_notch"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_number2"
                    app:layout_constraintTop_toBottomOf="@id/tv_notification" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/switch_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:checked="false"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/color_777777"
                    android:textSize="12sp"
                    android:theme="@style/SCBSwitch"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_notification_details" >


                    <TextView
                        android:text="@string/notification_access"
                        android:textColor="@color/color_777777"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imv_check_notification"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_un_select_app"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_number3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_number_3"
                    app:layout_constraintBottom_toBottomOf="@id/tv_battery_details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_battery" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_battery"
                    style="@style/TextViewSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/battery_optimization"
                    app:layout_constraintStart_toEndOf="@id/img_number3"
                    app:layout_constraintTop_toBottomOf="@id/switch_notification" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_battery_details"
                    style="@style/TextViewMediumActive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/disable_battery_optimization_if_your_notch_disappear_automatically_after_some_times"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_number3"
                    app:layout_constraintTop_toBottomOf="@id/tv_battery" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/switch_battery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_switch_dynamic"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/_8sdp"
                    android:textSize="12sp"
                    android:theme="@style/SCBSwitch"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_battery_details" >

                    <TextView
                        android:textColor="@color/color_777777"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/battery_optimization"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imv_check_battery"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_un_select_app"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_bluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/switch_battery">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_number4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_number_4"
                        app:layout_constraintBottom_toBottomOf="@id/tv_bluetooth_details"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_bluetooth" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_bluetooth"
                        style="@style/TextViewSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/txt_bluetooth_connect"
                        app:layout_constraintStart_toEndOf="@id/img_number4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_bluetooth_details"
                        style="@style/TextViewMediumActive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:text="@string/used_to_display_all_the_devices_connected_through_bluetooth_on_the_notch"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_number4"
                        app:layout_constraintTop_toBottomOf="@id/tv_bluetooth" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/switch_bluetooth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/bg_switch_dynamic"
                        android:checked="false"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp"
                        android:theme="@style/SCBSwitch"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_bluetooth_details">

                        <TextView
                            android:textColor="@color/color_777777"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fira_sans_medium"
                            android:text="@string/txt_bluetooth_connect"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imv_check_bluetooth"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:src="@drawable/ic_un_select_app"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                        />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/relay_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:id="@+id/fr_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" android:tag="binding_1">

                <include
                    android:id="@+id/layout_shimmer"
                    layout="@layout/ads_shimmer_native_permission" />
            </FrameLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
         