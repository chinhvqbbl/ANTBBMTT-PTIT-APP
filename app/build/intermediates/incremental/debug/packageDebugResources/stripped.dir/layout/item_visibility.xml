<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlt_container"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_4sdp" android:tag="layout/item_visibility_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_tick_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_toStartOf="@id/tv_name"
            android:src="@drawable/ic_tick_visibility"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            style="@style/TextViewMediumActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/always" />
    </RelativeLayout>

         