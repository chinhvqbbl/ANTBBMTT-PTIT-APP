<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/activity_onboarding_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/fr_ads"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@+id/ll_circle"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:fontFamily="@font/fira_sans_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/txt_skip"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:orientation="horizontal"
                tools:ignore="SmallSp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_1"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_view_select" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_2"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:src="@drawable/ic_view_un_select" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_3"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_7sdp"
                    android:src="@drawable/ic_view_un_select" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_4"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:src="@drawable/ic_view_un_select" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_get_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/fira_sans_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/next"
                android:textColor="#5F5F5F"
                android:textSize="16sp"
                android:visibility="visible" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fr_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" android:tag="binding_1">

            <include
                android:id="@+id/shimmer_ads"
                layout="@layout/ads_shimmer_native_large" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         