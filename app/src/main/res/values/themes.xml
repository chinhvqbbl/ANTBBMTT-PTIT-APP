<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackgroundCacheHint">@color/white</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:animateLayoutChanges">false</item>
        <item name="android:windowBackground">#F4F4F4</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>


    <!--Theme Dialog-->
    <style name="ThemeDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="ThemeDialogFullscreen" parent="android:Theme.Holo.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowMinWidthMajor">100%</item>
    </style>

    <style name="ThemeBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StyleBottomSheetDialog</item>
    </style>

    <style name="StyleBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Ads2" parent="@style/AdsAppTheme">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15.0px</item>
        <item name="android:minHeight">15.0px</item>
        <item name="android:text">Ad</item>
    </style>



    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextViewMediumActive" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/fira_sans_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewMediumInActive" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/fira_sans_medium</item>
        <item name="android:textColor">@color/color_777777</item>
    </style>

    <style name="TextViewSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/fira_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10dp</item>
        <item name="fontFamily">@font/fira_sans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogCustom">
        <item name="colorPrimary">@color/gntGreen</item>
    </style>

    <style name="ShapeAppearanceOverlay"/>

    <style name="ShapeAppearanceOverlay.Avatar">
        <item name="cornerFamily">@null</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_9682FF</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/color_DADADA
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForegroundInverse">@color/color_DADADA</item>
        <item name="android:colorForeground">@color/color_809682FF</item>
    </style>
</resources>